<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab.visual.movieapp.controller.MainController">
    <BorderPane>
        <top>
            <VBox styleClass="header-container">
                <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10" />
                    </padding>
                    <Label styleClass="app-title" text="MovFlix" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="genreFilterBtn"
                            styleClass="genre-filter-btn"
                            text="ðŸŽ¬"
                            onAction="#showGenreOverlay"/>
                    <TextField fx:id="searchField" promptText="Search movies..." styleClass="search-field" />
                    <Button fx:id="themeToggleBtn" onAction="#onThemeToggle" styleClass="theme-toggle" text="â˜€" />
                </HBox>
            </VBox>
        </top>

        <center>
            <StackPane>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="main-scroll">
                    <FlowPane fx:id="moviesContainer" styleClass="movies-container" />
                </ScrollPane>
                <ProgressIndicator fx:id="loadingIndicator" visible="false" />
            </StackPane>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="20" styleClass="footer">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Label fx:id="statusLabel" text="Ready" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#loadMoreMovies" styleClass="load-more-btn" text="Load More" />
            </HBox>
        </bottom>
    </BorderPane>

    <!-- This VBox is the overlay sidebar -->
    <VBox fx:id="wishlistSidebar"
          prefWidth="300"
          styleClass="sidebar"
          visible="false"
          managed="false">
        <HBox alignment="TOP_RIGHT">
            <Button fx:id="closeSidebarBtn" styleClass="closeSidebarBtn" text="âœ•" onAction="#hideSidebar"/>
        </HBox>
        <Label text="Wishlist" styleClass="sidebar-title" style="-fx-padding: 10 0 10 10;" />
        <ListView fx:id="wishlistListView" styleClass="wishlist-list" VBox.vgrow="ALWAYS"/>
    </VBox>

    <!-- Expand button anchored to right edge -->
        <Button fx:id="showSidebarBtn"
                text="â‰¡"
                styleClass="expand-sidebar-btn"
                StackPane.alignment="CENTER_RIGHT"
                onAction="#showSidebar"
        />
    <!-- Genre Filter Overlay -->
    <StackPane fx:id="genreOverlay"
               styleClass="genre-overlay"
               visible="false"
               managed="false"
    >
        <VBox spacing="24" styleClass="genre-panel">
            <HBox alignment="TOP_RIGHT">
                <Button fx:id="closeGenreOverlayBtn" styleClass="closeSidebarBtn" text="âœ•" onAction="#hideGenreOverlay" />
            </HBox>
            <Label text="Select Genres" styleClass="sidebar-title" />
            <GridPane fx:id="genreCheckboxGrid" hgap="24" vgap="16">

            </GridPane>
            <HBox alignment="BOTTOM_RIGHT">
                <Button fx:id="applyGenreBtn" styleClass="apply-genre-btn" text="Apply" onAction="#applyGenreFilter" />
            </HBox>
        </VBox>
    </StackPane>

</StackPane>

